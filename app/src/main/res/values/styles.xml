<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 底部导航栏默认样式 -->
    <style name="Widget.Pokedex.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">

    </style>

    <style name="Theme.Pokedex.ActionMode.CloseButton" parent="Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:tint">?attr/colorOnSurface</item>
    </style>

    <style name="specie_strength_progress_bar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/species_strength_progress</item>
        <item name="minHeight">30dp</item>
        <item name="maxHeight">30dp</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:maxHeight">30dp</item>
    </style>

    <style name="BottomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/bottom_dialog_up</item>
        <item name="android:windowExitAnimation">@anim/bottom_dialog_down</item>
    </style>

    <style name="BottomSheetDialogTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:paddingBottom">@dimen/margin_standard</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleLarge</item>
        <item name="android:paddingTop">@dimen/margin_middle</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PokemonHeaderImageView">
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_marginStart">@dimen/margin_middle</item>
        <item name="android:layout_marginTop">@dimen/margin_standard</item>
        <item name="android:layout_marginBottom">@dimen/margin_standard</item>
    </style>

    <!-- ============================= -->
    <!-- 宝可梦列表中的宝可梦名字 TextView -->
    <!-- ============================= -->
    <style name="Widget.Pokedex.PokemonNameTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleMedium</item>
    </style>

    <!-- GridLayout中横向平分 -->
    <style name="GridLayoutColumn">
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="GridLayoutColumn.Label" parent="GridLayoutColumn">
        <item name="android:layout_gravity">fill</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.LabelMedium</item>
    </style>

    <style name="GridLayoutColumn.ClickableItem" parent="GridLayoutColumn">
        <item name="android:layout_gravity">fill</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:clickable">true</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyLarge</item>
    </style>
</resources>