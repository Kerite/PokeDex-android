<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:key="dex_category"
        android:title="图鉴设置">
        <rikka.preference.SimpleMenuPreference
            android:defaultValue="SWORD"
            android:entries="@array/list_game"
            android:entryValues="@array/list_game_value"
            android:key="preference_game"
            android:summary="%s"
            android:title="图鉴版本" />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="other_category"
        android:title="Other">
        <Preference
            android:key="action_check_update"
            android:title="@string/check_update" />
        <rikka.material.preference.MaterialSwitchPreference
            android:defaultValue="true"
            android:key="preference_auto_check_update"
            android:title="@string/auto_check_update" />
        <rikka.material.preference.MaterialSwitchPreference
            android:defaultValue="true"
            android:key="preference_anonymous_analyze"
            android:title="匿名统计" />
    </PreferenceCategory>
</PreferenceScreen>